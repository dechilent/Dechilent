<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E2FF"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.pixplicity.fontview.FontAppCompatTextView
        android:id="@+id/tv_score"
        style="@style/FontTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_rounded_list"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawablePadding="6dp"
        android:drawableTint="#FFEB3B"
        android:padding="12dp"
        android:text="0"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_replay_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded_list"
        android:src="@drawable/ic_replay_black_24dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/btn_hint"
        android:layout_marginLeft="12dp"
        android:visibility="visible"
        android:padding="12dp"/>

    <ImageButton
        android:id="@+id/btn_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rounded_list"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:visibility="visible"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:src="@drawable/setting_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_setting"
        android:layout_toLeftOf="@+id/ll_cwo"
        android:layout_toRightOf="@+id/ll_cwe"
        android:background="@drawable/math_background"
        android:gravity="top"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pb_count"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="167dp"
                android:layout_height="167dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:max="60"
                android:progress="60"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:visibility="gone"/>

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_question"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="28dp"
                android:paddingBottom="28dp"
                android:text="5 X 6"
                android:textColor="#fff"
                android:textSize="56sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_count"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="52dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/anim_btn_1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        app:lottie_fileName="btn_mat.json" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:id="@+id/btn_ans_1"
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="46sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="52dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/anim_btn_2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        app:lottie_fileName="btn_mat.json" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:id="@+id/btn_ans_2"
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="46sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/star"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_fileName="star.json" />

    <LinearLayout
        android:id="@+id/ll_cwe"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cwe"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="right"
            android:src="@drawable/cwo_games" />

        <com.pixplicity.fontview.FontAppCompatTextView
            android:id="@+id/btn_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/math_background"
            android:gravity="center"
            android:padding="16dp"
            android:text="BERANDA"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cwo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cwo"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/cwe_games" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_pause_circle_outline_black_24dp" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_time"
                style="@style/FontTextViewStyle"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/border_rounded_list"
                android:gravity="center"
                android:text="01:00"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mask_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#1B1B1B"
        android:visibility="gone">

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pause"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/ll_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="Paused"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/btn_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:layout_marginBottom="18dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>