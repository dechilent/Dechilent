<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_games_name"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Permainan Bahasa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="12dp" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/tv_desc_hint"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Permainan Bahasa"
                android:textSize="14sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:background="@drawable/button_setting_rounded"
                android:layout_gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>