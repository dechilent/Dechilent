<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="FontTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="pix_font">fonts/Karla-Regular.ttf</item>
        <item name="pix_fontBold">fonts/Karla-Bold.ttf</item>
        <item name="pix_fontItalic">fonts/Karla-Italic.ttf</item>
        <item name="pix_fontBoldItalic">fonts/Karla-BoldItalic.ttf</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">1sp</item>
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
</resources>
